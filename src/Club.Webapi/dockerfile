# Base para tiempo de ejecución
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
WORKDIR /app
EXPOSE 80

# Etapa de build
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

COPY ["src/WebApi/ClubApp.csproj", "WebApi/"]
RUN dotnet restore "WebApi/ClubApp.csproj"

# ❗️ Aquí corregimos la ruta: Copiamos correctamente todos los archivos
COPY src/WebApi/ ./WebApi/

WORKDIR /src/WebApi
RUN dotnet publish "ClubApp.csproj" -c Release -o /app/publish

# Imagen final
FROM base AS final
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "ClubApp.dll"]

